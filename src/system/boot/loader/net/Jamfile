SubDir HAIKU_TOP src system boot loader net ;

UsePrivateHeaders kernel [ FDirName kernel boot platform $(TARGET_BOOT_PLATFORM) ] ;
UsePrivateHeaders drivers ;

SubDirC++Flags -D_BOOT_MODE -fno-rtti ;

local platform ;
for platform in [ MultiBootSubDirSetup $(TARGET_BOOT_PLATFORM) ] {
       on $(platform) {
		   local tcp = ;
			local iscsi = ;
			if $(TARGET_ARCH) = ppc {
				tcp = TCP.cpp ;
				iscsi = iSCSITarget.cpp ;
			}

			BootStaticLibrary [ MultiBootGristFiles boot_net ] :
				ARP.cpp
				ChainBuffer.cpp
				Ethernet.cpp
				IP.cpp
				NetDefs.cpp
				NetStack.cpp
				RemoteDisk.cpp
				UDP.cpp
				$(tcp)
				$(iscsi)
			;
	   }
}
