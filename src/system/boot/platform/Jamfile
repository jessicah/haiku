SubDir HAIKU_TOP src system boot platform ;

Echo "In system/boot/platform Jamfile..." ;

if $(HAIKU_BOOT_PLATFORMS) {
	Echo "Have $(TARGET_BOOT_PLATFORMS) to configure..." ;
	SubInclude HAIKU_TOP src system boot platform generic ;
	for bootPlatform in $(HAIKU_BOOT_PLATFORMS) {
		Echo "Including boot platform $(bootPlatform)..." ;
		SubInclude HAIKU_TOP src system boot platform $(bootPlatform) ;
	}
}
